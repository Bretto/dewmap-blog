<div ng-controller="PostsCtrl">
    <a class="btn btn-primary" ng-click="PostSrv.onNew()" ng-show="PostSrv.isAdmin">

        <i class="icon-plus"></i> Add

    </a>
    <ul id="posts">
        <li ng-repeat="post in posts">
            <div class="row">
                <div class="span12">
                    <a ng-click="PostSrv.onRead(post._id)" class="post-test">
                        <h2>{{post.title}}</h2>
                        <p class="lead">
                            <time>{{post.date | date:'MMM d yyyy'}}</time>
                        </p>
                    </a>
                </div>
            </div>
            <hr>
        </li>
    </ul>
</div>


