<div id="post-list" ng-controller="PostsCtrl">
    <a class="btn btn-primary" ng-click="PostSrv.onNew()" ng-show="PostSrv.isAdmin">

                <i class="icon-plus"></i> Add

    </a>
    <ul>
        <li ng-repeat="post in posts" class="well-inverse">
            <a ng-click="PostSrv.onDestroy(post)" ng-show="PostSrv.isAdmin" class="btn btn-primary">

                        <i class="icon-trash"></i> Delete

            </a>
            <a ng-click="PostSrv.onRead(post._id)" class="post-test">
                <h1>{{post.title}}</h1>
                <time><strong>{{post.date | date:'MMM d'}}</strong> {{post.date | date:'yyyy'}}</time>
            </a>
        </li>
    </ul>
</div>