<section id="login" ng-controller="LoginCtrl">
    <header>
        <time><strong>{{post.date | date:'MMM d'}}</strong><br>{{post.date | date:'yyyy'}}</time>
        <div class="shine"></div>
        <h1>Login</h1>
    </header>
    <div class="page-content">
        <div ng-bind-html-unsafe="message">{{message}}</div>
        <form>
            <p>
                <label>Username:</label>
                <input type="text" name="username" ng-model="user.username">
            </p>

            <p>
                <label>Password:</label>
                <input type="text" name="password" ng-model="user.password">
            </p>

            <p>
                <input type="submit" ng-click="onSubmit(user)">
            </p>
        </form>
    </div>
</section>