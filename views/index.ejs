<body ng-controller="MainCtrl">

<div class="navbar navbar-inverse navbar-fixed-top" ng-controller="NavCtrl">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="/post">Dewmap</a>

            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li><a href="/post">Posts</a></li>
                    <li><a href="/about">About</a></li>
                </ul>
                <form name="myForm" class="navbar-form pull-right">
                    <div ng-show="!postService.isLoggedIn">
                        <button class="btn" type="button" ng-click="showLogin = true" ng-show="!showLogin">Sign-in</button>
                        <div ng-show="showLogin">
                            <div>
                                <input class="span2" type="text" placeholder="Name" name="username" ng-model="user.username" required/>
                                <input class="span2" type="password" placeholder="Password" name="password" ng-model="user.password" required/>
                                <button type="submit" class="btn" ng-click="onSubmit(user)" ng-disabled="myForm.$invalid">Submit</button>
                            </div>
                        </div>
                    </div>
                    <div ng-show="postService.isLoggedIn">
                        <button class="btn pull-right" type="button" ng-click="postService.onLogout()">Logout</button>
                    </div>
                </form>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container">
    <div id="notifications"></div>
    <ng-view></ng-view>
</div>
